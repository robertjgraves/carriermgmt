<h2>Locations</h2>
<%= link_to 'New Location', new_location_path %>
<table class="table table-striped">
	<tr>
		<th>Name</th>
		<th>City</th>
		<th>State</th>
		<th></th>

	</tr>

	<% @locations.each do |location| %>
		<tr>
			<td><%= location.name %></td>
			<td><%= location.city %></td>
			<td><%= location.state %></td>
			<td><%= link_to 'Show', location %> | 
				<%= link_to 'Edit', edit_location_path(location) %> |
				<%= link_to 'Delete', location_path(location), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>